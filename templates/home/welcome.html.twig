<div class="container-fluid p-0 position-relative">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success text-center w-100 position-absolute">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger text-center w-100 position-absolute">
            {{ message }}
        </div>
    {% endfor %}
    <div class="jumbotron jumbotron-fluid text-center text-dark d-flex align-items-center" style="background-image: url(/img/snowboard-7000597_1920.jpg); background-size: cover; background-position: center; height: 90vh;">
        <div class="container">
            <h1 class="display-4 mx-auto" style="text-shadow: 1px 1px 0 white, -1px -1px 0 white, 1px -1px 0 white, -1px 1px 0 white;">Take it to the next level with Snowtricks</h1>
        </div>
    </div>
    <div class="position-absolute bottom-0 end-0">
        <a href="#anchorBottomScreen" style="color: black;">
            <i class="fa-solid fa-arrow-down fs-1" style="position: absolute; bottom: 80px; right: 60px;"></i>
        </a>
    </div>
</div>
<div class="container mt-5" style="max-width: 1400px;">
    <div class="bloc_cards" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(14rem, 1fr)); gap: 40px;"></div>
    <div class="container d-flex align-items-center justify-content-center">
        <div id="flagEmptyData" class="container mt-5 p-5 text-center" style="display: none">
            <p>No figures are available</p>
            <br><i class="fa-solid p-5 fa-person-snowboarding fa-2xl"></i>
        </div>
    </div>
    <div id="load_spinner" class="container mt-5 p-5" style="display: flex; width: 20%; height: 11rem;">
        <div class="card-body d-flex align-items-center p-3" style="border: outset;">
            <div class="bloc_button-card m-auto">
                <i class="fa-solid fa-spinner fa-spin-pulse fa-xl"></i>
                Load more
            </div>
        </div>
    </div>
    <div id="anchorBottomScreen" class="position-absolute end-0">
        <a href="#barNav" style="color: black;">
            <i class="fa-solid fa-arrow-up fs-1" style="position: absolute; bottom: 80px; right: 60px;"></i>
        </a>
    </div>
</div>
