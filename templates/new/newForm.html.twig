<div class="container mt-5" style="max-width: 850px;">
    <h1 class="text-center">Create your new figure</h1>
    <!-- Form for new figure begin -->
    {{ form_start(form, {'attr': {'id': 'formFigure'}}) }}
    {{ form_row(form._token) }}
    <div class="form-group p-3">
        {{ form_label(form.title) }}
        <div class="error-message text-white fw-bold">
            {{ form_errors(form.title) }}
        </div>
        {{ form_widget(form.title) }}
    </div>
    <div class="form-group p-3">
        {{ form_label(form.contentFigure) }}
        <div class="error-message text-white fw-bold">
            {{ form_errors(form.contentFigure) }}
        </div>
        {{ form_widget(form.contentFigure) }}
    </div>
    <div class="form-group p-3">
        {{ form_row(form.category) }}
    </div>
    <div class="d-flex p-3 justify-content-center">
        <input id="addMedia" class="p-3" type="button" value="Add media">
    </div>
    <div id="medias" class="mt-2 p-3" data-prototype="{{ form_widget(form.medias.vars.prototype)|e('html_attr') }}">
        {% for mediaForm in form.medias %}
            <div class="media">
                {{ form_row(mediaForm) }}
            </div>
        {% endfor %}
    </div>
    {{ form_end(form) }}
    <!-- Form for new figure ending -->
    <!-- Submit form figure begin -->
    <div class="d-flex flex-row-reverse mt-3 p-3">
        <button id="createFigureBtn" class="btn btn-secondary">
            Create a new figure
        </button>
    </div>
    <!-- Submit form figure ending -->
</div>

<!-- Box for add medias begin -->
<div id="boxMedia" class="modal d-none">
    <div class="modal-content">
        <div class="modal-body">
            <p>Choose an option:</p>
            <button id="addImage" class="btnMedia">Add a picture</button>
            <button id="addVideo" class="btnMedia">Add a video</button>
        </div>
        <div class="modal-footer">
            <button id="closeMedia" class="btnMedia">Leave</button>
        </div>
    </div>
</div>
<!-- Box for add medias ending -->
