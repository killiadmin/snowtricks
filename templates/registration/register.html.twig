{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center p-5 mt-5">
        {{ form_start(registrationForm) }}
        <h1 class="h3 mb-5 font-weight-normal text-center">Register</h1>


        <div class="container mt-5 p-5 border">
            <div class="text-center mb-3">
                {{ form_row(registrationForm.pseudo) }}
            </div>

            <div class="text-center mb-3">
                {{ form_row(registrationForm.email) }}
            </div>
            <div class="text-center mb-3">
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
            </div>

            <div class="d-flex flex-column">
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-secondary">Create an account</button>
                </div>
                <div class="d-flex justify-content-center m-3">
                    <a href="{{ path('app_login') }}">
                        Already an account ?
                    </a>
                </div>
            </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
