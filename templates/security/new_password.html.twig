{% extends 'base.html.twig' %}

{% block title %}New password{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center flex-column p-5 mt-5">
        <h1 class="h3 mb-5 font-weight-normal text-center">New password</h1>
        <div class="container mt-5 p-5 border w-50">
            {{ form_start(passForm) }}
            <div class="text-center mb-3">
                {{ form_row(passForm.pseudo) }}
            </div>
            <div class="text-center mb-3">
                {{ form_row(passForm.password) }}
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-success mt-3 w-50 text-center" type="submit">
                    Create your new password
                </button>
            </div>
            {{ form_end(passForm) }}
        </div>
    </div>
{% endblock %}