{% extends 'base.html.twig' %}

{% block title %}Forgot password{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center flex-column p-5 mt-5">
        <h1 class="h3 mb-5 font-weight-normal text-center">Forgot password</h1>
        <div class="blocPassword container mt-5 p-5 border">
            {{ form_start(resetPasswordForm) }}
            <div class="text-center mb-3">
                {{ form_row(resetPasswordForm.pseudo) }}
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-success mt-3 w-50 text-center" type="submit">
                    Ask for reset password
                </button>
            </div>
            {{ form_end(resetPasswordForm) }}
        </div>
    </div>
{% endblock %}
